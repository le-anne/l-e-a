---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HomePosts from "../components/HomePosts.astro";
import ColorScript from "../components/ColorScript.astro";
import Tags from "../components/Tags.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { Content as About } from "./about.md";
import getTags from "../scripts/getTags";
import TaxCalculator from '../components/Calculator.astro';


const posts = await Astro.glob("../posts/*.md");

const tags = getTags(posts);
---

<!doctype html>
<html lang="en-us">
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<body>
		<Header title={SITE_TITLE} />
		<main>
 
<TaxCalculator />


 <p class="disclaimer">
 This tax estimator is a tool designed to provide an estimate of your potential 
 tax liability based on the information you input. It is intended for general 
 informational purposes only and should not be relied upon as a substitute 
 for professional tax advice. The estimates generated by this tool may not 
 accurately reflect your actual tax liability due to variations in tax laws, 
 individual circumstances, and the potential for errors in data entry or 
 calculations.
 </p>
 

            <h1> Recent Posts </h1>
			<HomePosts allPosts={posts} />
			<p class="center">
				You can also <a href="https://l-ea.netlify.app/rss.xml">
					subscribe with RSS!
				</a>
			</p>
			<br />

			<Tags tags={tags} all />
		</main>
		<Footer />
		<ColorScript />
	</body>
</html>
